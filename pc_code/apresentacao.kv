<BLayout>:
    orientation: 'vertical'
    canvas.before:
        Rectangle:
            source: 'Imagem2.jpg'
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .3

        #canvas.before:
            #Color:
                #rgba: 0, 1, 0, 1
            #Rectangle:
                #pos: self.pos
                #size: self.size

        GridLayout:
            cols: 3
            rows: 2
            size_hint_x: .3

            #canvas.before:
                #Color:
                    #rgba: 1, 1, 1, 1
                #Rectangle:
                    #pos: self.pos
                    #size: self.size

            ImageReload:
                #size_hint: .8, .8
                pos_hint_x: 0
                #color: 1, 1, 1, 1

            BoxLayout:
            BoxLayout:
            BoxLayout:

        Label:
            id: 'Nome_do_App'
            text: 'EngAmostra'
            font_size: 40
            #size_hint_y: .3
            halign: 'center'
            color: 1, 1, 1, 1
            bold: True
            italic: True
            size_hint_x: .4

        LabelAutoria:
            #text: 'Autor: Felipe Garcia \nGraduando em Eng. da Computacao'
            color: 1, 1, 1, .7
            size: self.texture_size
            text_size: self.size
            #text_size: root.height, None
            #text_size: cm(4), cm(2)
            valign: 'top'
            halign: 'right'
            bold: True
            italic: True
            size_hint_x: .3

    GridLayout:
        cols: 3
        #size_hint_y: .7
        spacing: 20
        padding: 5, 0, 5, 0
        pos_hint: {'center_y': .5}

        #canvas.before:
            #Color:
                #rgba: 1, 1, 1, 1
            #Rectangle:
                #pos: self.pos
                #size: self.size

        ImageButtonBlue:
            #on_press:
                #sw_blue.active: False
                #Nome_do_App.text: 'oi'
        ImageButtonGreen:

        ImageButtonRed:

        SwitchBlue:
            id: 'sw_blue'
            size_hint_y: .1
        SwitchGreen:
            id: 'sw_green'
            size_hint_y: .1
        SwitchRed:
            id: 'sw_red'
            size_hint_y: .1

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .3
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            #size_hint_y: .3

        BoxLayout:
            orientation: 'vertical'
            padding: 0, 10, 0, 0
            #size_hint_y: .3

            LabelLDR:
                # text: 'Luminosidade ambiente: '
                font_size: 30
                halign: 'center'
                color: 1, 1, 1, 1
                bold: True
                italic: True

            LabelLM35:
                # text: 'Temperatura ambiente: '
                font_size: 30
                halign: 'center'
                color: 1, 1, 1, 1
                bold: True
                italic: True

            LabelStatus:
                font_size: 20
                halign: 'center'
                bold: True
                italic: True
                markup: True

        BoxLayout:
            orientation: 'vertical'
            #size_hint_y: .3

            SwitchSensores:
                id: 'sw_sensores'
                size_hint_y: .1

                canvas:
                    Color:
                        rgb: 1,1,1
                    Rectangle:
                        source: 'sw8.png'        # make or download your background jpg
                        # source: 'switch-background.png'
                        size: sp(83), sp(32)
                        pos: int(self.center_x - sp(41)), int(self.center_y - sp(16))
                    #Rectangle:
                        #source: 'swclose2.png' # make or download your slider jpg
                        #source: 'switch-button.png'
                        #size: sp(43), sp(32)
                        #pos: int(self.center_x - sp(41) + self.active_norm_pos * sp(41)), int(self.center_y - sp(16))